{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "./src/shared/*"
      ],
      "@http/*": [
        "./src/http/*"
      ],
      "@persistence/*": [
        "./src/persistence/*"
      ],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  }
}
